@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthAccount.cshtml";
}

<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/photos/signinimage.jpg" alt="sing up image" /></figure>
          
                
            </div>

            <div class="signin-form">
                <h2 class="form-title">Reset Password</h2>
                <form method="POST" class="register-form" asp-action="SendEmail">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Email"><i class="fa-solid fa-user"></i></label>
                        <input type="text" asp-for="Email" placeholder="Your Email" />
                    </div>
                    
                    <div class="form-group form-button">
                        <input type="submit"  class="form-submit" value="Reset Password" />
                    </div>
                </form>
               
            </div>
        </div>
    </div>
</section>
@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
   
}

