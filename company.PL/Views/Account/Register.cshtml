@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthAccount.cshtml";
}

<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form method="POST" class="register-form" asp-action="Register">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="FName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="FName" class="text"  placeholder="First Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="LName" class="text" placeholder="Last Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input type="email" asp-for="Email" class="text email" placeholder="Your Email" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"><i class="fa-solid fa-lock"></i></label>
                        <input type="password"  asp-for=Password placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"><i class="fa-solid fa-lock"></i></label>
                        <input type="password" asp-for="ConfirmPassword" placeholder="Confirm password" />
                    </div>
                    <div class="form-group">
                        <input type="checkbox"  asp-for="IsAgree" class="agree-term" />
                        <label asp-for="IsAgree" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">

                <figure> <img src="~/photos/signupimage.jpg" alt="sing up image" /></figure>
               @*  <img src="wwwroot\photos\signupimage.jpg" /> *@
                <a asp-action="Login" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>
@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
    @*    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
 *@
}










