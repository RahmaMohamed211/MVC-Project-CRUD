@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Index";
    string viewDataMessage = ViewData["Message"] as string;
}
@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="alert alert-primary">
        @TempData["Message"]
    </div>

}
<div class="container">
<h1>All Department </h1>

<a asp-controller="Department" asp-action="Create" class="btn btn-primary mt-5"> Create New Department</a>
<br />
<br />
@if (Model.Count() > 0)
{
    <div class="container">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>@Html.DisplayNameFor(D=>D.DataOfcreation)</th>
                <th>Detailes</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
       </thead>
       <tbody>
            @foreach(var departments in Model)
            {
                <tr>
                    <td>@departments.Code</td>
                    <td>@departments.Name</td>
                    <td>@departments.DataOfcreation</td>
                    <partial name="_ButtonPartial" model="@departments.Id.ToString()" />
               </tr>
            }
        </tbody>
    </table>
    </div>
}
else
{
    <div class="mt-5 alert  alert-warning">
        <h3>There is No Department</h3>
      </div>
}
</div>

